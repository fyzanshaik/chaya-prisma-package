{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // This ensures TypeScript generates .d.ts files
    "declarationMap": true, // Optional: Generates .d.ts.map files for debugging
    "sourceMap": true // Optional: Generates .js.map files for debugging
  },
  "include": ["src", "prisma"]
}
